 < s c r i p t >

 var n=0;



function calcularMedia(nota1, nota2) {​​

 var media= ( parseFloat(nota1)+parseFloat(nota2) ) / 2;

 return media;

 }​​



function exibeTexto(){​​

 var nota1 = document.getElementById("idnota1").value;

 var nota2 = document.getElementById("idnota2").value;


 alert("Media = "+calcularMedia(nota1, nota2));


 // document.getElementById("resultado").innerHTML="Media = "+calcularMedia(nota1, nota2);


 }​​



